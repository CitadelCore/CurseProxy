selectByIds:
SELECT *
FROM addons AS a
  INNER JOIN categorySections AS c
  ON a.categorySectionId = c.categorySectionId
WHERE a.id IN ?
ORDER BY a.id;

selectById:
SELECT *
FROM addons AS a
  INNER JOIN categorySections AS c
  ON a.categorySectionId = c.categorySectionId
WHERE a.id == ?
ORDER BY a.id;

replace:
REPLACE INTO addons VALUES ?;

insert:
INSERT INTO addons VALUES ?;